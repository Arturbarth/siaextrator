<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.0.xsd">

    <changeSet id="002-create-database-instances-table" author="system">
        <createTable tableName="database_instances">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="database_name" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="database_size" type="BIGINT"/>
            <column name="database_encoding" type="VARCHAR(50)"/>
            <column name="is_accessible" type="BOOLEAN" defaultValue="true"/>
            <column name="cluster_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="discovered_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint
                baseTableName="database_instances"
                baseColumnNames="cluster_id"
                referencedTableName="clusters"
                referencedColumnNames="id"
                constraintName="fk_database_instances_cluster"
                onDelete="CASCADE"/>

        <addUniqueConstraint
                tableName="database_instances"
                columnNames="cluster_id, database_name"
                constraintName="uk_cluster_database"/>

        <createIndex tableName="database_instances" indexName="idx_database_instances_cluster_id">
            <column name="cluster_id"/>
        </createIndex>

        <createIndex tableName="database_instances" indexName="idx_database_instances_name">
            <column name="database_name"/>
        </createIndex>
    </changeSet>
</databaseChangeLog>